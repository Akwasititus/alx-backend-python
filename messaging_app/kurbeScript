#!/bin/bash
# kurbeScript
# Author: Titus Ayamga
# Description: Script to start a local Kubernetes cluster with Minikube and verify setup

set -e

echo "ğŸ” Checking if Minikube is installed..."
if ! command -v minikube &> /dev/null
then
    echo "âŒ Minikube is not installed. Please install it before running this script."
    exit 1
fi
echo "âœ… Minikube is installed."

echo "ğŸš€ Starting Minikube cluster..."
minikube start --driver=docker

echo "ğŸ” Verifying Kubernetes cluster status..."
kubectl cluster-info

echo "ğŸ“‹ Listing all available pods..."
kubectl get pods -A

echo "âœ… Kubernetes cluster setup and verification complete!"
